{
    "name": "extension",
    "license": "MIT",
    "scripts": {
        "dev": "rm -rf $npm_config_extension/dist && webpack --mode=development --watch --config webpack.config.ts --env extension=$npm_config_extension & extension=$npm_config_extension node scripts/run-extension.ts",
        "build": "rm -rf $npm_config_extension/build && webpack --mode=production --config webpack.config.ts --env extension=$npm_config_extension",
        "package": "npm run build --extension=$npm_config_extension && zip -r $npm_config_extension/packages/$(date -u +\"%Y-%m-%dT%H:%M:%SZ\").zip $npm_config_extension/build",
        "lint": "prettier --write --loglevel silent . && eslint . --ext .js,.jsx,.ts,.tsx"
    },
    "dependencies": {
        "@chatscope/chat-ui-kit-react": "^1.10.1",
        "@chatscope/chat-ui-kit-styles": "^1.4.0",
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@mui/icons-material": "^5.11.16",
        "@mui/lab": "^5.0.0-alpha.134",
        "@mui/material": "^5.13.2",
        "@tanstack/react-query": "^4.29.7",
        "@trpc/client": "^10.28.0",
        "@trpc/react-query": "^10.28.0",
        "@trpc/server": "^10.28.0",
        "@types/chrome": "^0.0.242",
        "@types/dompurify": "^3.0.2",
        "@types/firefox-webext-browser": "^111.0.1",
        "@types/marked": "^5.0.0",
        "@types/node": "^20.3.1",
        "@types/react": "^18.2.6",
        "@types/react-dom": "^18.2.4",
        "@types/uuid": "^9.0.2",
        "@types/webextension-polyfill": "^0.10.1",
        "@types/webpack": "^5.28.1",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "autoprefixer": "^10.4.7",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.4",
        "dompurify": "^3.0.4",
        "dotenv": "^16.3.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.1",
        "marked": "^5.1.1",
        "postcss": "^8.4.14",
        "postcss-loader": "^7.3.0",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.11.2",
        "react-toastify": "^9.1.3",
        "style-loader": "^3.3.3",
        "tailwindcss": "^3.3.2",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.0.1",
        "typescript": "^5.1.3",
        "uuid": "^9.0.0",
        "wait-on": "^7.0.1",
        "web-ext": "^7.6.2",
        "webextension-polyfill": "^0.10.0",
        "webpack": "^5.83.1",
        "webpack-cli": "^5.1.1",
        "webpack-merge": "^5.9.0",
        "zustand": "^4.3.8"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/explicit-module-boundary-types": "off"
        },
        "globals": {
            "window": true,
            "document": true,
            "process": true
        },
        "ignorePatterns": [
            "node_modules/",
            "dist/",
            "build/",
            "packages/",
            "pendo/",
            "scripts/"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
