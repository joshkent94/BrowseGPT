{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "paths": {
            "@background/*": ["background/*"],
            "@public/*": ["public/*"],
            "@styles/*": ["styles/*"],
            "@components/*": ["sidePanel/components/*"],
            "@pages/*": ["sidePanel/pages/*"],
            "@utils/*": ["sidePanel/utils/*"],
            "@backgroundUtils/*": ["background/utils/*"],
            "@server/types": ["../server/dist/server.d.ts"]
        },
        "baseUrl": "./"
    },
    "include": ["./**/*.ts", "./**/*.tsx", "../index.d.ts"],
    "exclude": ["node_modules", "pendo/pendo.js"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
