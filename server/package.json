{
    "name": "browsegpt-server",
    "version": "0.0.1",
    "description": "Backend for the BrowseGPT extension",
    "main": "index.ts",
    "scripts": {
        "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/server.js",
        "build": "tsc",
        "dev": "nodemon",
        "format": "prettier --write --loglevel silent .",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "correct": "npm run format && npm run lint"
    },
    "author": "Joshua Kent",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.2.3",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@trpc/client": "^10.28.0",
        "@trpc/server": "^10.28.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "openai": "^3.2.1"
    },
    "nodemonConfig": {
        "ignore": [
            "node_modules"
        ],
        "watch": [
            "src/routes",
            "src/utils",
            "src/index.ts"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
        "ext": "ts, js"
    }
}
