{
    "ts-node": {
        "files": true
    },
    "files": ["./server.ts", "../extension/shared/global.d.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "moduleResolution": "node16",
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "moduleDetection": "force",
        "outDir": "./dist",
        "strict": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@routes/*": ["routes/*"],
            "@utils/*": ["utils/*"]
        },
        "declaration": true
    },
    "include": ["./**/*.ts", "./server.ts", "../extension/shared/global.d.ts"],
    "exclude": ["node_modules", "dist"]
}
