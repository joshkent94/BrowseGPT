{
    "manifest_version": 3,
    "name": "BrowseGPT",
    "description": "An AI assistant for your browser",
    "version": "0.0.1",
    "action" : {
        "default_popup": "popup.html",
        "default_title": "Browse GPT",
        "default_icon" : "icon.png"
    },
    "chrome_url_overrides": {
        "newtab": "newTab.html"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "identity"
    ],
    "icons": {
        "16" : "icon.png",
        "48" : "icon.png",
        "128" : "icon.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}