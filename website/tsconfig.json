{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "Node16",
        "target": "ES2022",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "paths": {
            "@public/*": ["public/*"],
            "@styles/*": ["src/styles/*"],
            "@components/*": ["src/components/*"]
        },
        "baseUrl": "./"
    },
    "include": ["./**/*.ts", "./**/*.tsx", "../extension/shared/global.d.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
